#card-template
  %div{ :class => 'card user-{{user_id}}', :"data-id" => '{{id}}' }
    .debug DEBUG
    %img{ :src => "/assets/back.jpg" }
    .counters{ :style => 'display:none' } 0
    .power{ :style => 'display:none' }

#card-detail-template
  .detail
    %img{ :src => "{{image_url}}" }
    %ul.menu
      %li
        %a{ :href => "{{url}}", :title => 'Open MagicCards.info page in a new window', :target => '_blank' }
          MagicCards.info

#handview-template
  %div{ :id => '{{id}}', :class => 'hand' }
    %h2 {{user.name()}}'s {{title}}
    .button-bar
      %a.mulligan-button.button Mulligan
    .button-bar.right
      %a.close-button.button Close
    .container

#cardbrowser-template
  %div{ :id => '{{id}}', :class => 'card-browser {{name}}' }
    %h2 {{long_title}}
    .button-bar.right
      %a.close-button.button Close
    .container

#message-template
  %li
    %span.message{ :class => "message user-{{user.id}}" }
      {{user.name()}}
    {{text()}}

#user-stylesheet-template
  :css
    .message.user-{{id}} { color: {{color}} }
    .user-{{id}}.card:hover {
     -moz-box-shadow: {{color}} 0px 0px 15px 0;
     -webkit-box-shadow: {{color}} 0px 0px 15px 0;
     -o-box-shadow: {{color}} 0px 0px 15px 0;
     box-shadow: {{color}} 0px 0px 15px 0;
    }

#user-template
  %div{ :id => 'user-{{id}}', :class => 'user' }
    %h3.name {{name}}
    %table
      %tr
        %th Lives
        %td
          %a.button.small.plus  +
          %a.button.small.minus &nbsp;-&nbsp;
        %td
          %form
            %input.lives{ :value => 20 }

      %tr
        %th Hand
        %td{ :colspan => 1 }
        %td
          %input.hand-size{ :disabled => true }



#user-area-template
  %div{ :class => 'user-area user-{{id}}' }
    .name {{name()}}

#dropbox-template
  .box-container{:class => '{{name}}-container'}
    %h4
      %a.browse-button.button{:href => '#'} {{title}}
      %a.shuffle-button.button{:href => '#' } Shuffle
    %div{ :class => "box {{name}}" }
      .counter.overlay 0
