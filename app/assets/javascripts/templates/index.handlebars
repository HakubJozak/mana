<div class='controls'>
  {{view Mana.ChatView}}
  {{view Mana.BrowserView holder=current_player.hand }}

  <div class="decks">
    <div class="status">
      Decks
    </div>

    <div class="piles">
      {{view Mana.PackView holder=current_player.deck }}
      {{view Mana.PackView holder=current_player.graveyard }}
      {{view Mana.PackView holder=current_player.exile }}
      <div class="pile-container">
        <button class="next-turn">
          Next  Turn
        </button>
      </div>
    </div>
  </div>
</div>
<div class='tables'>
  {{#each player in players}}
    {{view Mana.TableView player=player}}
  {{/each}}
</div>
