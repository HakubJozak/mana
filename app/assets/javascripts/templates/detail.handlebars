<div class="card-image">
  <img {{bind-attr src=frontside}} {{bind-attr alt=name}}>
</div>
<div class="info">
  <h1>{{name}}</h1>
  <table class="pure-table">
    <thead>
    <tr>
      <th>Counters</th>
      <th>Power / Toughness</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      {{ view Mana.PlusMinusView content=counters tagName="td"}}
      <td>
        {{ view Mana.PlusMinusView content=power tagName="span"}}
        /
        {{ view Mana.PlusMinusView content=toughness tagName="span"}}
      </td>
    </tr>
    </tbody>
  </table>
</div>
